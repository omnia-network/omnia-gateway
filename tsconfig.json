{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["esnext"],
    "rootDir": ".",
    "outDir": "build",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "isolatedModules": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "strictPropertyInitialization": false,
    "useUnknownInCatchVariables": false
  },
  "references": [
    { "path": "./packages/core" },
    { "path": "./packages/ic" },
    { "path": "./packages/proxy-client" }
  ],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
}
