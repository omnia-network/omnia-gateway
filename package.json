{
  "name": "omnia-gateway",
  "version": "0.0.1",
  "description": "Node.js Omnia Gateway implementation",
  "engines": {
    "node": ">=16"
  },
  "type": "module",
  "devDependencies": {
    "@babel/plugin-syntax-import-assertions": "^7.20.0",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@types/babel__core": "^7.20.0",
    "@types/babel__generator": "^7.6.4",
    "@types/express": "^4.17.15",
    "@types/jest": "~27.0.2",
    "@types/node": "~16.11.6",
    "@types/node-fetch": "^2.6.2",
    "@types/supertest": "^2.0.12",
    "@types/ws": "^8.5.4",
    "@typescript-eslint/eslint-plugin": "~5.3.0",
    "@typescript-eslint/parser": "~5.3.0",
    "babel-jest": "^29.3.1",
    "eslint": "~8.1.0",
    "eslint-config-prettier": "~8.3.0",
    "eslint-plugin-jest": "~25.2.2",
    "http-proxy-cli": "^2.1.0",
    "jest": "^28.1.3",
    "prettier": "~2.4.1",
    "remote": "^0.2.6",
    "rimraf": "~3.0.2",
    "supertest": "^6.3.3",
    "tsutils": "~3.21.0",
    "typescript": "~4.4.4"
  },
  "scripts": {
    "start": "node build/src/main.js",
    "build-and-start": "npm run build && npm run start",
    "clean": "rimraf coverage build tmp",
    "prebuild": "npm run lint",
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -w -p tsconfig.json",
    "build:release": "npm run clean && tsc -p tsconfig.release.json",
    "lint": "eslint . --ext .ts --ext .mts",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "prettier": "prettier --config .prettierrc --write .",
    "test:watch": "jest --watch",
    "generate:types": "cd scripts && ./generate-omnia-backend-types.sh"
  },
  "dependencies": {
    "@dfinity/agent": "^0.15.1",
    "@dfinity/principal": "^0.15.1",
    "@node-wot/binding-http": "0.8.x",
    "@node-wot/core": "0.8.x",
    "@project-chip/matter.js": "^0.2.1",
    "ajv": "^6.12.6",
    "dotenv": "^16.0.3",
    "node-fetch": "^3.3.0",
    "tslib": "~2.3.1",
    "winston": "^3.8.2",
    "wot-typescript-definitions": "0.8.0-SNAPSHOT.23",
    "ws": "^8.13.0"
  }
}
